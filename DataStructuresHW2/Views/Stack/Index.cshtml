@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

@ViewBag.ErrorMessage
@ViewBag.Search
@ViewBag.Time
<div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
    <a href="@Url.Action("AddOne", "Stack")" class="w3-bar-item w3-button">Add one item to Stack</a>
    <a href="@Url.Action("AddMany", "Stack")" class="w3-bar-item w3-button">Add Huge List of Items to Stack</a>
    <a href="@Url.Action("Display", "Stack")" class="w3-bar-item w3-button">Display Stack</a>
    <a href="@Url.Action("DeleteItem", "Stack")" class="w3-bar-item w3-button">Delete from Stack</a>
    <a href="@Url.Action("Clear", "Stack")" class="w3-bar-item w3-button">Clear Stack</a>
    <a href="@Url.Action("Search", "Stack")" class="w3-bar-item w3-button">Search Stack</a>
    <a href="@Url.Action("Index", "Home")" class="w3-bar-item w3-button">Return to Main Menu</a>
</div>    
    
