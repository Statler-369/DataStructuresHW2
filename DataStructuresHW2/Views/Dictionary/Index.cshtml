@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<h2>Index</h2>

<div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
    <a href="@Url.Action("AddOne", "Dictionary")" class="w3-bar-item w3-button">Add one item to Dictionary</a>
    <a href="@Url.Action("AddHugeList", "Dictionary")" class="w3-bar-item w3-button">Add Huge List of Items to Dictionary</a>
    <a href="@Url.Action("Display", "Dictionary")" class="w3-bar-item w3-button">Display Dictionary</a>
    <a href="@Url.Action("SelectDelete", "Dictionary")" class="w3-bar-item w3-button">Delete from Dictionary</a>
    <a href="@Url.Action("ClearDict", "Dictionary")" class="w3-bar-item w3-button">Clear Dictionary</a>
    <a href="@Url.Action("SearchDict", "Dictionary")" class="w3-bar-item w3-button">Search Dictionary</a>
    <a href="@Url.Action("Index", "Home")" class="w3-bar-item w3-button">Return to Main Menu</a>
</div>

